{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container py-5">
        <div class="row py-5">
            {{ form_start(registrationForm, {'attr': {'class':'col-md-9 m-auto'}}) }}
            {{ form_errors(registrationForm) }}
                <div class="row">
                    <div class="form-group col-md-6 mb-3">
                        {{ form_row(registrationForm.name, {'attr': {'class':'form-control mt-1'}}) }}
                    </div>
                    <div class="form-group col-md-6 mb-3">
                        {{ form_row(registrationForm.username, {'attr': {'class':'form-control mt-1'}}) }}
                    </div>
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.email, {'attr': {'class':'form-control mt-1'}}) }}
                </div>
                <div class="mb-3">                    
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class':'form-control mt-1'}}) }}                    
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.file, {'attr': {'class':'form-control mt-1'}}) }}
                </div>
                <div class="row">
                    <div class="col text-end mt-2">
                        {{ form_row(registrationForm.Send, {'attr': {'class':'btn btn-success btn-lg px-3'}}) }}                        
                    </div>
                </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
